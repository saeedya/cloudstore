# Common settings across environments
FLASK_APP=app
LOG_LEVEL=INFO
JWT_SECRET_KEY=your-jwt-secret-key

# Development settings (rename to .env.development)
# FLASK_ENV=development
# DATABASE_URL=mysql://dev_user:dev_pass@localhost/cloud_store_dev
# SECRET_KEY=dev-secret-key
# LOG_LEVEL=DEBUG

# Testing settings (rename to .env.testing)
# FLASK_ENV=testing
# DATABASE_URL=mysql://test_user:test_pass@localhost/cloud_store_test
# SECRET_KEY=test-secret-key
# LOG_LEVEL=DEBUG

# Production settings (rename to .env.production)
# FLASK_ENV=production
# DATABASE_URL=mysql://prod_user:prod_pass@localhost/cloud_store_prod
# SECRET_KEY=prod-secret-key-very-secure
# LOG_LEVEL=INFO

# Optional features (uncomment if needed)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=your-region